---
import ExerciseBank from '../components/ExerciseBank';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Journal de Pilates - Banque d'exercices">
  <div class="container mx-auto px-4 py-8 max-w-7xl">
    <div class="flex flex-col md:flex-row md:justify-between md:items-center gap-4 mb-8">
      <h1 class="text-2xl md:text-4xl font-bold text-gray-800">Banque d'exercices</h1>
      <div class="flex flex-wrap gap-2 md:gap-4">
        <a
          href="/"
          class="px-3 py-2 md:px-4 text-sm md:text-base border border-gray-300 text-gray-700 rounded-lg font-semibold hover:bg-gray-50 transition-colors whitespace-nowrap"
        >
          Mes s√©ances
        </a>
        <a
          href="/history"
          class="px-3 py-2 md:px-4 text-sm md:text-base bg-indigo-600 text-white rounded-lg font-semibold hover:bg-indigo-700 transition-colors whitespace-nowrap"
        >
          Historique
        </a>
      </div>
    </div>

    <div class="space-y-8">
      <ExerciseBank client:load />
    </div>
  </div>
</Layout>

