---
import HistoryComponent from '../components/History';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Pilates Journal - Historique">
  <div class="container mx-auto px-4 py-8 max-w-7xl">
    <div class="mb-8">
      <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 mb-4">
        <a
          href="/"
          class="text-indigo-600 hover:text-indigo-700 font-semibold text-sm sm:text-base"
        >
          ← Retour à l'accueil
        </a>
        <div class="flex gap-2 sm:gap-4">
          <a
            href="/exercises"
            class="px-3 py-2 md:px-4 text-sm md:text-base border border-gray-300 text-gray-700 rounded-lg font-semibold hover:bg-gray-50 transition-colors whitespace-nowrap"
          >
            Banque d'exercices
          </a>
        </div>
      </div>
      <h1 class="text-2xl md:text-4xl font-bold text-gray-800">Historique</h1>
    </div>
    <HistoryComponent client:load />
  </div>
</Layout>
